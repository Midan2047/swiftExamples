// 문제 3.
// Int형 배열을 탐색하여 3의 배수면 true, 아니면 false를 Bool형 배열에 넣고 출력하시오.
let numbers3: [Int] = [0, 1, 2, 3, 4, 5]
var is3: [Bool] = [Bool]()
for i in numbers3 {
    is3.append(i % 3 == 0)
}
print(is3)

