// 문제 1.
// Int 형 배열에서 3의 배수를 제외한 수만 배열에 넣어서 출력하는 함수
let numbers1: [Int] = [0, 1, 2, 3, 4, 6]
var not3Num: [Int] = [Int]()
for i in numbers1 {
    if i % 3 != 0 {
        not3Num.append(i)
    }
}
print(not3Num)

