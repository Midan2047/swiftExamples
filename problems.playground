// 문제 4.
// 절대값이 큰 순서대로 절대값으로 변환하지 말고 출력하시오
var numbers4 : [Int] = [2, 1, 3, -4, 5]

var a = numbers4
for x in 1..<a.count {
    var y = x
    while y > 0 && abs(a[y]) > abs(a[y - 1]) {
        a.swapAt(y - 1, y)
        y -= 1
    }
}

print(a)

