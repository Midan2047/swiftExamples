// 문제 2.
// Double형 배열의 값들을 모두 더한 후 Int형 배열으로 출력하시오(버림)
let numbers2: [Double] = [0.1, 1.1, 2.2, 3.2, 4.2, 5.1]
var mul:Double = 1

for i in numbers2 {
    mul *= i
}
print(Int(mul))

