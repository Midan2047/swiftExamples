// 문제 5.
// 배역을 받고 총합을 100에서 뺀 값을 출력. 단, 2번 문제의 결과를 단순히 100에서 빼면 안됨.
let numbers5: [Int] = [0, 1, 2, 3, 4, 5]
var sum:Int = 0

for i in numbers5 {
    sum += i
}
print(100-sum)

